<!-- PRESENTACIÓN -->
<div id="frase" class="row-py-4" class="contenedor-presentacion container-fluid">
  <div class="col-md-5 offset-md-2 py-3"></div>
  <h1 class="h1 text-center" class="titulo">Frase de hoy...</h1>
  <ul class="frase-ul">
    {{#each frase}}
    <li>
      <a href="javascript:void(0);" class="text-center" data-toogle="modal" data-target="#modal {{id}}">
        <img src="/images/frase1.jpg" class="img-frase" {{titulo}}>
      </a>
    </li>
    {{/each}}
  </ul>
</div>

<div class="modal fade" id="modal {{id}}" data-backdrop="static" data-keyboard="false" tabindex="-1"
  aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">{{titulo}}</h5>
        <button type="button" class="clouse" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h2 class="frasedehoy"> {{frase}} </h2>
      </div>
    </div>
  </div>
</div>


<!-- TESTIMONIOS -->

<div class="container-fluid carrusel">
  <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
