<div class="container-fluid modificarcontenedor">
    <div class="row">
        <div class="col">
            <h4 class="text-center">Modificar frase</h4>
            <form action="/admin/frase/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{frase.id}}" name="id">
                <div class="form-group">
                    <label for="">Titulo</label>
                    <input type="text" class="form-control" placeholder="titulo" value="{{frase.titulo}}" name="titulo">
                </div>
                <div class="form-group">
                    <p>
                        <label for="">Imagen: <input type="file" name="imagen" id="imagen" /></label>
                    </p>
                    <p>
                        <label for=""><input type="checkbox" name="img_delete" id="img_delete" value="1">
                            Eliminar imagen?</label>
                        <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>
                </div>
                <div class="form-group">
                    <label for="">Frase</label>
                    <textarea name="frase" class="form-control" placeholder="frase"> {{frase.frase}} </textarea>
                </div>
                <button type="submit" class="btn btn-warning buttom">Modificar</button>
                <div>
                    <button type="submit" class="btn btn-warning buttom buttomhome">Volver al Home <a
                            href="/"></a></button>
                </div>
            </form>
        </div>
    </div>
</div>

{{#if error}}
<h5>{{message}}</h5>
{{/if}}