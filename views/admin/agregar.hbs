<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar nueva frase</h4>
            <form action="/admin/frase/agregar" method="post" enctype="multipart/form-data">
            <div class="form-group">
            <input type="text" class="form-control" placeholder="titulo" name="titulo">
            </div>
            <div class="form-group">
                <textarea name="text" class="form-control" placeholder="frase" name="frase"></textarea>
            </div>
            <div class="form-group">
            <label for="">Imagen<input type="file" class="form-control" name="imagen" id="imagen"></label>
            </div>
            <button type="submit" class="btn btn-warning boton">Guardar</button>
            </form>
        </div>
    </div>
</div>

{{#if error}}
<h5>{{message}}</h5>
{{/if}}